<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
 <display-name>WebXML_without_annotation</display-name>
 
 <context-param>
       <param-name>driver</param-name>
       <param-value>com.mysql.cj.jdbc.Driver</param-value>     
   </context-param>
   
   <context-param>
       <param-name>url</param-name>
       <param-value>jdbc:mysql://localhost:3306/sql_workbench</param-value>
    </context-param>
    
  <servlet>
    <servlet-name>LoginContextjdbc</servlet-name>
    <servlet-class>LoginContextjdbc</servlet-class>
    
    <init-param>
       <param-name>user</param-name>
       <param-value>root</param-value>
     
    </init-param>
    
    
     <init-param>
       <param-name>pwd</param-name>
       <param-value>root</param-value>
     
    </init-param>
    
 </servlet>
 

 <servlet-mapping>
     <servlet-name>LoginContextjdbc</servlet-name>
    <url-pattern>/LoginContextjdbc</url-pattern>
 </servlet-mapping>
  
</web-app>















